  gem 'spring'
  gem 'spring-commands-rspec'
  gem 'pry'
  gem 'pry-rails'
  gem 'hirb-unicode'
  gem 'tapp'
  gem 'shoulda-matchers'
  gem 'timecop'
  gem 'rubocop'
  gem 'guard-rubocop'
end

group :development do
  gem 'rails-erd'
  gem 'i18n-generators'
