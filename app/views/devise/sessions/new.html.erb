<h2 class="page-header">Sign in</h2>

<div class="jumbotron">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), class: 'form', role: 'form') do |f| %>
    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
    </div>

    <div><%= f.label :password %><br />
      <%= f.password_field :password, class: 'form-control' %></div>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit 'Sign in', class: 'btn btn-default' %></div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
