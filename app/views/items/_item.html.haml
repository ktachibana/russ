- hide_feed = local_assigns[:hide_feed]
.panel.panel-default
  .panel-heading
    = link_to item.title, item.link, target: '_blank'
    - unless hide_feed
      .pull-right
        %small
          = link_to item.feed.title, item.feed.link_url
          = link_to 'â– ', item.feed
  .panel-body
    = simple_format item.description
