- hide_feed = local_assigns[:hide_feed]
- subscription = item.feed.subscriptions.find { |s| s.user_id == current_user.id }
.panel.panel-default
  .panel-heading
    = link_to item.title, item.link, target: '_blank'
    - unless hide_feed
      .pull-right
        %small
          = link_to subscription.user_title, item.feed.link_url
          = link_to 'â– ', subscription
    .clearfix
  .panel-body
    = simple_format item.description
