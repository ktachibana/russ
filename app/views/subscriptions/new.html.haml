= form_for @subscription, class: 'form', html: { data: { remote: true, type: 'json' } } do |f|
  .feed
    = f.fields_for :feed do |ff|
      = ff.hidden_field :url
      = link_to ff.object.link_url, target: '_blank' do
        %h1= ff.object.title
      - ff.object.description.presence.try do |desc|
        .description.well= simple_format desc
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control', placeholder: @subscription.feed.title
  .form-group
    %div
      = f.label :tags
      = f.text_field :tag_list, class: 'form-control'
    .owned-tags
      - current_user.subscriptions.tag_counts.each do |tag|
        %span.label.label-default= tag.name

  = f.submit class: 'btn btn-primary'
