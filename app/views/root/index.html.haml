%p.notice= notice
%p.alert= alert

%h1= current_user.email
= link_to 'Import OPML', upload_feeds_path
= link_to 'Reload all', update_all_feeds_path, method: :put
= link_to 'Sign out', destroy_user_session_path, method: :delete

- Feed.all.each do |feed|
  .feed
    = link_to feed.title, feed.link_url, target: '_blank'

%h2 Items
= paginate @items
- @items.each do |item|
  %hr
  .rss
    = item.feed.title
  .item
    .title
      = link_to item.title, item.link, target: '_blank'
    .body
      = simple_format item.description
= paginate @items
