%ul.nav.nav-pills
  - tag_ids = params[:tag_id] || []
  - current_user.tags.each do |tag|
    - tag_id = tag.id.to_s
    - active = tag_id.in?(tag_ids)
    %li{ class: ('active' if active) }
      = link_to tag.name, params.merge(tag_id: active ? tag_ids - [tag_id] : (tag_ids + [tag_id]))

= paginate @items
.items
  = render @items
= paginate @items
